<div class="container">
  <div class="row">
    <div class="col">
        <div class="card">
        <%= link_to 'back', users_path, class: 'btn btn-warning' %>
        <div class="card-body">
            <%=  form_with model: @user, url: user_path, local: true, method: :patch do |f| %>
                <div class="form-group">
                    <%= f.label :first_name, "First Name" %>
                    <%= f.text_field :first_name, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.label :age, "Age" %>
                    <%= f.text_field :age, class: 'form-control' %>
                </div>
                <%= f.submit %>
            <% end %>
        </div>
        </div>
    </div>
  </div>
</div>


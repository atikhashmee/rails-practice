<div class="container">
  <div class="row">
    <div class="col">
    <div class="card">
        <%= link_to 'Create New', new_user_path, class: "float-right btn btn-success" %>
        <div class="card-body">
            <% flash.each do |key, value| %>
                <div class="alert alert-<%= key %>"><%= value %> </div>
            <% end %>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First</th>
                        <th scope="col">Age</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% @users.each do |user| %>
                        <tr>
                            <th scope="row">1</th>
                            <td><%= user.first_name %></td>
                            <td><%= user.age %></td>
                            <td>
                                <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning' %>
                                <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
        
    </div>
  </div>
</div>

